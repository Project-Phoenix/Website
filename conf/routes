# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# GET
GET 	/							controllers.Application.home()
GET 	/createTask					controllers.Application.createTask()
GET		/showTasks					controllers.Application.showTasks()
GET		/showSubmissions			controllers.Application.showSubmissions()
GET		/createLecture				controllers.Application.createLecture()
GET		/createTaskSheet			controllers.Application.createTaskSheet()
GET		/showTaskSheet				controllers.Application.showTaskSheets()
GET 	/addGroup					controllers.Application.addGroup()
GET		/showGroups					controllers.Application.showGroups()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

#title <=> Task title
#filename <=> trivial
#type <=> either attachment or pattern
GET		/download/*title/*filename/$type<attachment|pattern>			controllers.Application.download(title:String, filename:String, type:String)

#POST

POST	/sendTask					controllers.Application.sendTask()
POST	/sendLecture				controllers.Application.sendLecture()
POST 	/sendTaskSheet				controllers.Application.sendTaskSheet()
POST 	/sendGroup					controllers.Application.sendGroup()
POST	/showLectureGroups			controllers.Application.showLectureGroups()
POST	/deleteGroups				controllers.Application.deleteGroups()
